<div class="container">
 <div class="row">
  <div class="col-xs-2">
    <%= render 'members/products/type_serch', types: @types %>
  </div>
  <div class="col-xs-5 product_image">
  	<!-- 画像投稿機能 -->
  </div>
  <div class="col-xs-5 product_contents">
  	<h2><%= @product.name %></h2>
  	<p><%= @product.explanation %></p>
  	<% if @product %>
    <p><%= @product.unit_price %></p><P>(税込)</P>
  	<% else %>
  	 <p>soldout</p>
  	<% end %>
  </div>
  <% if @product %>
   <%= form_for(@order_product, url: members_baskets_path) do |f| %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.number_field :quantity_purchased, placeholder: "個数選択", class: 'btn btn-default', min: 1 %>
    <%= f.submit 'カートに入れる', class: 'btn btn-primary' %>
   <% end %>
  <% end %>
  </div>
 </div>
</div>