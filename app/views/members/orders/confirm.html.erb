<h2>注文情報確認</h2>
<div>
	<table>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
		<!-- カート商品でeach文 -->
	</table>

	<table>
		<tr>
			<td>送料</td>
			<td>800</td>
		</tr>
		<tr>
			<td>商品合計</td>
			<td></td>
		</tr>
		<tr>
			<td>請求金額</td>
			<td></td>
		</tr>
	</table>

	<table>
		<tr>
			<td>支払い方法</td>
			<td>
				<% if @order.payment_method == true %>
					クレジットカード
				<% else %>
					銀行振込
				<% end %>
			</td>
		</tr>
		<tr>
			<td>お届け先</td>
			<td>
				<%= "#{@post} #{@address} #{@name}" %>
			</td>
		</tr>
	</table>
	<%= form_for(@order, url: members_orders_path) do |f| %>
		<%= f.hidden_field :payment_method, value: @order.payment_method %>
		<%= f.hidden_field :post_address, value: @post %>
		<%= f.hidden_field :address, value: @address %>
		<%= f.hidden_field :full_name, value: @name %>
		<%= f.submit "購入を確定する", class: "btn btn-success" %>
	<% end %>
</div>