<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h2>商品一覧</h2>
    </div>
    <div class="col-md-6 col-md-offset-2">
      <table class="“table”">
        <thead>
     	    <tr class="“active”">
     	      <th>商品ID</th>
     	      <th>商品名</th>
     	      <th>税抜価格</th>
     	      <th>ジャンル</th>
     	      <th>ステータス</th>
     	    </tr>
        </thead>

        <tbody>
         	<% @products.each do |product| %>
         	  <tr>
         	    <td><%= product.id %></td>
         	    <td><%= link_to product.name, admins_product_path(product.id) %></td>
         	    <td><%= product.unit_price.to_s(:delimited, delimiter: ',') %></td>
         	    <td><%= product.products_type.type_name %></td>
              <% if product.sales_status == "true" %>
                <td>販売中</td>
              <% else %>
                <td>販売停止中</td>
              <% end %>
       	    </tr>
       	  <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

