<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-1">
     <!-- rowの一行目として位置を設定している -->
      <h4>会員一覧</h4>
    </div>
	</div>

  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <div>

        <table class="table">
          <!-- <caption>table title and/or explanatory text</caption> -->
          <thead>
            <tr class="active">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member|  %>
              <tr>
                <td><%= member.id  %></td>
                <td><%= member.last_name %><%= member.first_name %></td>
                <td><%= member.email %></td>
                <td><%= member.member_status %></td>
              </tr>
            <% end %>
            <!-- each -->
            <%= paginate @members %>
            <!-- ページング機能 -->
          </tbody>
        </table>

      </div>
    </div>
  </div>
  <!-- row -->
</div>
<!-- container -->